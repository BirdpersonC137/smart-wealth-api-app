<section class="container">
    <h2><%= @portfolio.name %></h2>

    <h4><%= @portfolio.name %> asset allocation</h4>
    <div class="row">
    <div class="col-6">
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>Canadian Equity:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.cad_equity)%></div>
       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>US equity:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.us_equity)%></div>

       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>International Equity:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.int_equity)%></div>
       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>Emerging Equity:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.emerging_equity)%></div>
       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>Alternative:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.alternatives)%></div>
       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>Canadian Fixed Income:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.cad_fixed_income)%></div>
       </div>
       <div class="d-flex justify-space-between row">
            <div class="col-8 p-0"><strong>International Fixed Income:</strong></div>
            <div class="col-4 p-0 d-flex justify-content-end"><%= number_to_percentage(@portfolio.int_fixed_income)%></div>
       </div>
            <%= link_to 'Edit', edit_portfolio_path(@portfolio) %> |
            <%= link_to 'Back', portfolios_path %>
       
    </div>
    <div class="canvas col-6">
        <%= pie_chart [["Canadian Equity", @portfolio.cad_equity], ["US Equity", @portfolio.us_equity], ["International Equity", @portfolio.int_equity], ["Emerging Equity", @portfolio.emerging_equity], ["Alternatives", @portfolio.alternatives], ["Canadian Fixed Income", @portfolio.cad_fixed_income], ["International", @portfolio.int_fixed_income], ["Cash", @portfolio.cash]],library: {legend: {position: "right"}}%>
    </div>
    </div>
</section>