<div class="container col-4 mt-5 formstyle">
<h2>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :date_of_birth, as: :string, :input_html => {class: 'datepicker'} %>
    <%= f.input :email, autofocus: true, placeholder: 'billgates@microsoft.com'  %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "off", placeholder: 'Password' %>
    <%= f.input :password_confirmation, autocomplete: "off", placeholder: 'Password Confirmation' %>
  <div class="actions d-flex justify-content-center mb-5 pt-3">
    <%= f.submit "Sign up", class: 'btn btn-primary btn-raised submit' %>
  </div>
<% end %>
</div>