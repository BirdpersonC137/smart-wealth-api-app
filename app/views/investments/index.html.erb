<p id="notice"><%= notice %></p>

<h1>Investments</h1>

<table>
  <thead>
    <tr>
      <th>Ticker</th>
      <th>Name</th>
      <th>Price</th>
      <th>Yield</th>
      <th>Mer</th>
      <th>Risk category</th>
      <th>Objective</th>
      <th>Distribution</th>
      <th>Style</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @investments.each do |investment| %>
      <tr>
        <td><%= investment.ticker %></td>
        <td><%= investment.name %></td>
        <td><%= investment.price %></td>
        <td><%= investment.yield %></td>
        <td><%= investment.MER %></td>
        <td><%= investment.risk_category %></td>
        <td><%= investment.objective %></td>
        <td><%= investment.distribution %></td>
        <td><%= investment.style %></td>
        <td><%= link_to 'Show', investment %></td>
        <td><%= link_to 'Edit', edit_investment_path(investment) %></td>
        <td><%= link_to 'Destroy', investment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

