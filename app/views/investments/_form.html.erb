<%= simple_form_for(@investment, local: true) do |form| %>
    <%= form.input :ticker, id: :investment_ticker %>
    <%= form.input :name, id: :investment_name %>
    <%= form.input :price, id: :investment_price %>
    <%= form.input :yield, id: :investment_yield %>
    <%= form.input :mer, id: :investment_mer %>
    <%= form.input :risk_category, id: :investment_risk_category %>
    <%= form.input :objective, id: :investment_objective %>
    <%= form.input :distribution, id: :investment_distribution %>
    <%= form.input :style, id: :investment_style %>
    <%= form.input :typeof, id: :typeof %>
    <%= form.submit class: 'btn btn-primary'%>
<% end %>
